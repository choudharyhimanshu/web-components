{
  "name": "web-components",
  "version": "1.0.0",
  "description": "",
  "husky": {
    "hooks": {
      "pre-commit": "prettier:check"
    }
  },
  "scripts": {
    "start": "npm-run-all --parallel prettier:watch storybook",
    "test": "echo \"WARN: no test specified\" && exit 0",
    "storybook": "start-storybook -p 6006",
    "pre-build": "npm-run-all lint prettier:check",
    "build": "npm-run-all pre-build lerna-build build-storybook",
    "build-storybook": "build-storybook",
    "lint": "tslint 'packages/**/*.{ts,tsx}'",
    "lerna-build": "lerna run build",
    "prettier:check": "prettier --check packages/**/*.{ts,tsx,json}",
    "prettier:write": "prettier --write packages/**/*.{ts,tsx,json}",
    "prettier:watch": "onchange 'packages/**/*.{ts,tsx,json}' -- prettier --write {{changed}}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/choudharyhimanshu/web-components.git"
  },
  "author": "",
