{
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.d.ts",
      "**/*.stories.ts",
      "**/*.stories.tsx",
    ],
    "compilerOptions": {
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es6",
      "lib": ["esnext", "dom"],
      "strictNullChecks": true,
      "strict": true,
      "noImplicitAny": true,
      "rootDirs": ["packages"]
    },
    "buildOnSave": false,
    "compileOnSave": false
}
